 SELECT SYSDATE 
 FROM DUAL;
 
      SELECT SYSDATE + 2 AS TOMORROW 
      FROM DUAL;

 
    
    
    SELECT SYSDATE, EXTRACT(YEAR FROM SYSDATE)
    AS Year, EXTRACT(MONTH FROM SYSDATE) 
    AS Month, EXTRACT(DAY FROM SYSDATE) 
    AS Day 
FROM DUAL;




select to_char (Sysdate,'yyyy-mm-dd hh24:mi:ss') as DataAgora
FROM DUAL


